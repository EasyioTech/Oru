# ============================================================================
# BuildFlow ERP - Environment Configuration
# ============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control
# ============================================================================

# ============================================================================
# Database Configuration (REQUIRED)
# ============================================================================
POSTGRES_PASSWORD=dev-password-123-32-chars-minimum-req
POSTGRES_PORT=5432

# ============================================================================
# Authentication (REQUIRED)
# ============================================================================
# Generate with: openssl rand -base64 32
JWT_SECRET=dev-jwt-secret-32-characters-minimum-length

# ============================================================================
# Application URLs
# ============================================================================
# Development
VITE_API_URL=http://localhost:3001/api
FRONTEND_URL=http://localhost:5174
API_URL=http://localhost:3001/api

# Production (orutest.site, oru.erp.com, get-oru.com)
# Leave VITE_API_URL empty for same-origin (nginx proxies /api to backend)
# VITE_API_URL=
# FRONTEND_URL=https://orutest.site
# API_URL=https://orutest.site/api

# ============================================================================
# CORS Configuration
# ============================================================================
# Development
CORS_ORIGINS=http://localhost:5173,http://localhost:5174,http://localhost:3000,http://localhost:3001

# Production - all domains (add to .env when deploying)
# CORS_ORIGINS=https://orutest.site,https://www.orutest.site,https://oru.erp.com,https://www.oru.erp.com,https://get-oru.com,https://www.get-oru.com,http://orutest.site,http://www.orutest.site,http://oru.erp.com,http://www.oru.erp.com,http://get-oru.com,http://www.get-oru.com

# ============================================================================
# Port Configuration
# ============================================================================
BACKEND_PORT=3001
FRONTEND_PORT=5174
REDIS_PORT=6379

# ============================================================================
# Application Settings
# ============================================================================
NODE_ENV=development
APP_NAME=BuildFlow ERP
APP_VERSION=1.0.0
VITE_APP_NAME=BuildFlow ERP
VITE_APP_ENVIRONMENT=development

# ============================================================================
# Redis Configuration (Optional - defaults work for Docker)
# ============================================================================
REDIS_HOST=localhost
REDIS_PASSWORD=
REDIS_DB=0

# ============================================================================
# Email Configuration (Optional)
# ============================================================================
EMAIL_PROVIDER=smtp
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@yourdomain.com

# ============================================================================
# File Storage
# ============================================================================
FILE_STORAGE_PATH=/app/storage
