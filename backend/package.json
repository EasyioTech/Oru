{
    "name": "oru-backend",
    "version": "1.0.0",
    "description": "Oru ERP Backend - Fastify + Drizzle + TypeScript Multi-Tenant System",
    "type": "module",
    "main": "dist/server.js",
    "scripts": {
        "dev": "tsx watch src/server.ts",
        "build": "tsc",
        "start": "node dist/server.js",
        "typecheck": "tsc --noEmit",
        "db:create": "tsx src/scripts/create-main-db.ts",
        "db:generate": "tsc && drizzle-kit generate --config=drizzle.config.prod.ts",
        "db:push": "tsc && drizzle-kit push --config=drizzle.config.prod.ts",
        "db:studio": "drizzle-kit studio",
        "db:migrate": "tsx src/scripts/run-migration.ts",
        "db:migrate:prod": "node dist/scripts/run-migration.js",
        "lint": "eslint src --ext .ts",
        "test": "vitest"
    },
    "keywords": [
        "erp",
        "fastify",
        "drizzle",
        "typescript",
        "multi-tenant"
    ],
    "author": "EasyioTech",
    "license": "MIT",
    "dependencies": {
        "@aws-sdk/client-s3": "^3.990.0",
        "@aws-sdk/lib-storage": "^3.990.0",
        "@aws-sdk/s3-request-presigner": "^3.990.0",
        "@casl/ability": "^6.8.0",
        "@fastify/autoload": "^6.0.2",
        "@fastify/cors": "^10.0.1",
        "@fastify/helmet": "^12.0.1",
        "@fastify/jwt": "^9.0.1",
        "@fastify/multipart": "^9.0.1",
        "@fastify/rate-limit": "^10.1.1",
        "@fastify/sensible": "^6.0.1",
        "@fastify/static": "^8.0.2",
        "@fastify/swagger": "^9.3.0",
        "@fastify/swagger-ui": "^5.0.1",
        "@types/speakeasy": "^2.0.10",
        "bcryptjs": "^2.4.3",
        "bullmq": "^5.28.2",
        "dotenv": "^17.3.1",
        "drizzle-orm": "^0.38.3",
        "drizzle-zod": "^0.7.0",
        "fastify": "^5.2.0",
        "fastify-plugin": "^5.0.1",
        "ioredis": "^5.4.2",
        "jsonwebtoken": "^9.0.2",
        "nanoid": "^5.0.9",
        "nodemailer": "^6.9.16",
        "pg": "^8.13.1",
        "pino": "^9.5.0",
        "pino-pretty": "^13.0.0",
        "speakeasy": "^2.0.0",
        "zod": "^3.24.1"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.6",
        "@types/jsonwebtoken": "^9.0.7",
        "@types/node": "^22.10.2",
        "@types/nodemailer": "^6.4.17",
        "@types/pg": "^8.11.10",
        "@typescript-eslint/eslint-plugin": "^8.18.2",
        "@typescript-eslint/parser": "^8.18.2",
        "drizzle-kit": "^0.29.1",
        "eslint": "^9.17.0",
        "tsx": "^4.19.2",
        "typescript": "^5.7.2",
        "vitest": "^2.1.8"
    },
    "engines": {
        "node": ">=20.0.0",
        "npm": ">=10.0.0"
    }
}